                        }
                    },
                    {
                        title: 'List Employees',
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    {
                        title: 'List Employees',
                        extend: 'print',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7]
                        }
                    }
                ],

                "ajax": {
                    "url": "https://localhost:44356/API/Employees/",
                    "dataSrc": "result",
                    "order": [[1, 'asc']]
                },
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
